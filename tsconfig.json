{
  "compilerOptions": {
    "paths": { "*": ["types/*"] },
    "sourceMap": true,
    "target": "es2017",
    "declaration": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "alwaysStrict": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "src/**/*.test.ts"]
}
